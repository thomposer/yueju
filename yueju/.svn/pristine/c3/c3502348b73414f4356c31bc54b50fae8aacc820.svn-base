*{
    margin: 0;
    padding: 0;
    font-size: 0.24rem;
}
#all{
    width: 6.4rem;
}
#header{
    width:6.4rem;
    height: 0.62rem;
    background: black;
    line-height: 0.62rem;
    text-align: center;
}
#h_shou{
    display: block;
    height: 0.26rem;
    width:1rem;
    color: white;
    font-size: 0.24rem;
    /*margin-bottom: 0.2rem;*/
    margin: 0 auto;
}
/******************搜索框部分***********/
#query{
    width: 6.4rem;
    height: 0.8rem;
    /*background: blue;*/
    /*overflow:hidden;*/
    /*position:absolute;*/
    padding-top: 0.2rem;
}
#query-body{
    width: 6rem;
    height: 0.6rem;
    margin: 0 auto;
    border: solid 0.01rem #ff4081 ;
    border-radius: 0.08rem;
    position: relative;
}
#select-input{
    display: block;
    width: 3.1rem;
    height: 0.5rem;
    float: left;
    outline: none;
    position: absolute;
    top: 0.1rem;
    left: 2rem;
    border: 0;
}
#select2{
    width: 2rem;
    height: 0.6rem;
    line-height: 0.6rem;
    background: #ff4081;
    color: #C0C0C0;
    text-align: center;
    float: left;
    cursor: pointer;
    /*border-right:solid 1px #C0C0C0;*/
}
#select2 ul{
    position: relative;
    z-index: 500;
}
#select2 li{
    background: black;
    color: white;
    border-bottom: solid 1px white;
    display: none;
    opacity: 0.7;
    z-index: 500;
}
#s_sub{
    height: 0.6rem;
    width: 1.2rem;
    background: blue;
    position: absolute;
    top: 0.3rem;
    right: 0.05rem;
    z-index: 100;
    opacity: 0;

}
#sub{
    width: 0.7rem;
    height: 0.6rem;
    margin-top: 0.1rem;
    float: right;
    position: relative;
    margin-top:-0.3rem;
    /*border: solid 0.01rem red;*/
}
#sub_img{
    float: right;
    position: absolute;
    right: 0.2rem;
    top: 0.1rem;
}
/********************选择框部分**********************/
#h_select{
    height: 3.2rem;
    width: 6.4rem;
    background: #f2f2f2;
    margin-bottom: 0.5rem;
}
.pic_d{
    width: 6.4rem;
    height: 4.5rem;
    border: solid 1px #C0C0C0;
    margin-bottom: 20px;
    border-radius: 2px;
}
.pic_d img{
    width: 6.4rem;
    height: 3.5rem;
}
#all_information{
    width: 6.4rem;
    height: 55rem;
    position: relative;
    /*background: blue;*/
}
.h_r_title{
    position: absolute;
    top: 0px;
    color:#676d6d;
}
.h_r_city{
    position: absolute;
    top: 0px;
    color:#676d6d;
}
.h_r_des{
    position: absolute;
    top: 0px;
    width: 360px;
    height: 30px;
    font-size: 14px;
    overflow: hidden;
    margin-left: 10px;
    color:#b7bdbd;
    line-height: 30px;
}


