/*一条留言*/
*{
    padding:0;
    margin:0;
}
ul,ol{
    list-style:none;
}
.message{

}
.mail-list .message-mune{
    margin:0 15px;
    height: 40px;
}
.mail-list .message-mune li{
    float: right;
    border-right:1px solid #666666;
    margin:10px 0;
    padding-right:5px;
    padding-left:10px;
    font-size:22px;
}
.mail-list .message-mune li:first-child{
    float: left;
    border-right:none;
}
.mail-list hr{
    margin-top:0;
}
.mail-list .list-group .list-group-item .thumb img{
    width: 50px;
    height: 50px;
    border-radius: 50%;
    margin:20px;
}
.mail-list .list-group .list-group-item .thumb{
    width: 90px;
    text-align: center;
}
.mail-list .list-group .list-group-item .sender{
    float: left;
}
.mail-list .list-group .list-group-item .thumb strong{
    width: 90px;
    text-align: center;
}
.mail-list .list-group .list-group-item {
    height: 200px;
}
.mail-list .list-group .list-group-item .message-con{
    margin-left:90px;
    margin-right:50px;
    margin-top:20px;

}
.mail-list .list-group .list-group-item .message-con .message-time{
    text-align: center;
    margin-bottom:0;
}
.mail-list .list-group .list-group-item .message-del{
    float: right;
}